{% extends 'base.html.twig' %}

{% block title %}Hello ProductsController!{% endblock %}

{% block body %}
    <h1>Product</h1>
    <table>
        <thead>
        <tr>
            <th>Title</th>
            <th>Content</th>
            <th>Image</th>
        </tr>
        </thead>
        <tbody>
        <tr>
            {% for prod in products %}
                <td>
                    <p>{{ prod.title }}</p>
                    <a href="{{ prod.field_product_link }}">Read More</a>
                </td>
                <td>
                    {{ prod.body|raw }}
                </td>
                <td>
                    <img src="{{ imageUrl }}{{ prod.field_product_image }}" alt="test">
                </td>
            {% endfor %}
        </tr>
        </tbody>
    </table>
{% endblock %}
